<table modulename="HTML documents" default_view="display" orderby="htmldocname" order="asc" limit="20" enable_new="true" enable_edit="true" enable_delete="true" enable_empty="true" quick_add="htmldocname,data">
  <view name="display" displayname="Display">
  </view>
  <view name="details" displayname="Details" show_preview="true" template_mode="flat">
  </view>
  
  <field name="htmldocname" displayname="Name" simple_type="text" is_unique="true" required="true">
    <linktext views="display" value="index.php?view=details&amp;item[]=@id@"/>
  </field>
  <field name="data" displayname="Data" simple_type="htmlarea" input_height="260">
 	<store function="html_tidy"/>
	<filter views="display" function="html2text"/>
<!--
	<filter views="display" function="html_simplify"/>
-->
  </field>
  <field name="description" displayname="Description" simple_type="textarea">
    <notin views="display"/>
  </field>
  <field name="image" displayname="Image" simple_type="files" simple_file_size="5M" simple_size="10">
    <validate function="fileupload|jpg,jpeg,gif,png"/>
	<notin views="display" />
  </field>
  <field name="attachment" displayname="Attachment" simple_type="files" simple_file_size="10M" simple_size="10">
	<notin views="display"/>
  </field>
</table>