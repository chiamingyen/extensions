  <view name="display" displayname="Display">
  </view>

  <field name="statusname" displayname="Status" simple_type="text" required="true">
  </field>
  <field name="stattype" displayname="Type" simple_type="select" simple_size="1">
	<data sort="asc" values="tasks_##_Tasks|projects_##_Projects|files_##_Files|inventories_##_Inventory|helpdesk_##_Helpdesk"/>
  </field>
  <field name="description" displayname="Description" simple_type="textarea">
  </field>
</table>